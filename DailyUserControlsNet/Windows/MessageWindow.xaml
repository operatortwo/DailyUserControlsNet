<Window x:Class="MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyUserControlsNet"
        mc:Ignorable="d"
        Title="Message" Height="160" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid x:Name="Grid1" Background="#FFF1F1F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Image x:Name="Image1" HorizontalAlignment="Center" Width="32" Height="32" VerticalAlignment="Center"  Grid.Row="1" Source="/DailyUserControlsNet;component/Resources/Images/MessageWindow/Information_x32.png"/>
        <TextBlock x:Name="txblkMessage"  Text="Textblock" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Margin="0,10,20,10" Grid.Row="1" />
        <Button Content="OK" HorizontalAlignment="Center" Height="20" VerticalAlignment="Center" Width="60" IsCancel="True" IsDefault="True" Grid.ColumnSpan="2" Grid.Row="2"/>
    </Grid>
</Window>
